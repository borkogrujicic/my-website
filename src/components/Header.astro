---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { href: "/", label: "Home" },
  { href: "/sections", label: "Sections" },
  { href: "/privacy", label: "Privacy" },
  { href: "/login", label: "Login" },
];
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container max-w-5xl mx-auto flex h-14 items-center justify-between">
    <div class="flex">
      <a href="/" class="flex items-center space-x-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 32 32"
          fill="currentColor"
          class="h-6 w-6"
        >
          <!-- Main card/deck -->
          <rect x="6" y="8" width="14" height="18" rx="2" fill="currentColor" opacity="0.9"/>
          <!-- Second card (layered) -->
          <rect x="9" y="6" width="14" height="18" rx="2" fill="currentColor" opacity="0.7"/>
          <!-- Third card (layered) -->
          <rect x="12" y="4" width="14" height="18" rx="2" fill="currentColor" opacity="0.5"/>
          <!-- Star on front card -->
          <path d="M19 12 L20 15 L23 15 L20.5 17 L21.5 20 L19 18 L16.5 20 L17.5 17 L15 15 L18 15 Z" fill="currentColor" opacity="0.3"/>
        </svg>
        <span class="font-bold">AstroDeck</span>
      </a>
    </div>
    <nav class="flex items-center gap-6 text-sm">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="transition-colors hover:text-foreground/80 text-foreground/60"
        >
          {item.label}
        </a>
      ))}
    </nav>
    <div class="flex items-center space-x-2">
      <ThemeToggle />
      <a
        href="https://github.com/holger1411/astrodeck"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2"
      >
        GitHub
        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      </a>
    </div>
  </div>
</header>
