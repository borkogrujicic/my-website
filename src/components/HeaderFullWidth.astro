---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { href: "/", label: "Home" },
  { href: "/sections", label: "Sections" },
  { href: "/privacy", label: "Privacy" },
  { href: "/login", label: "Login" },
];
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="w-full px-4 flex h-14 items-center justify-between">
    <div class="flex">
      <a href="/" class="flex items-center space-x-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 32 32"
          fill="currentColor"
          class="h-6 w-6"
        >
          <!-- Triangle/A shape (rocket body) -->
          <path d="M16 2 L8 18 L12 18 L12 22 L20 22 L20 18 L24 18 Z" fill="currentColor" opacity="0.9"/>
          <!-- Rocket flames -->
          <path d="M12 22 L10 28 L14 25 L12 22 Z" fill="currentColor" opacity="0.6"/>
          <path d="M16 23 L15 30 L17 30 L16 23 Z" fill="currentColor" opacity="0.7"/>
          <path d="M20 22 L18 25 L22 28 L20 22 Z" fill="currentColor" opacity="0.6"/>
          <!-- Window -->
          <circle cx="16" cy="10" r="2" fill="currentColor" opacity="0.3"/>
        </svg>
        <span class="font-bold">Astronomic</span>
      </a>
    </div>
    <nav class="flex items-center gap-6 text-sm">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="transition-colors hover:text-foreground/80 text-foreground/60"
        >
          {item.label}
        </a>
      ))}
    </nav>
    <div class="flex items-center space-x-2">
      <ThemeToggle />
      <a
        href="/login"
        class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2"
      >
        Get Started
      </a>
    </div>
  </div>
</header>
