---
/**
 * AI Feature Section
 *
 * Highlights the AI-friendly development features of AstroDeck.
 * Built on the AGENTS.md standard supported by 60,000+ repositories.
 */

const tools = [
  {
    name: "OpenAI Codex",
    url: "https://openai.com/codex/",
    subtitle: "Native support",
    icon: "codex"
  },
  {
    name: "GitHub Copilot",
    url: "https://github.com/features/copilot",
    subtitle: "Coding Agent",
    icon: "github"
  },
  {
    name: "Cursor",
    url: "https://cursor.com",
    subtitle: "Native support",
    icon: "cursor"
  },
  {
    name: "Google Jules",
    url: "https://jules.google",
    subtitle: "Native support",
    icon: "google"
  },
  {
    name: "Windsurf",
    url: "https://windsurf.com",
    subtitle: "Agentic IDE",
    icon: "windsurf"
  },
  {
    name: "Claude Code",
    url: "https://claude.ai/code",
    subtitle: "+ Custom Agent",
    icon: "claude"
  }
];
---

<section class="py-24 px-6 bg-muted/30">
  <div class="container max-w-6xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column: Text -->
      <div class="space-y-6">
        <div class="inline-block px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
          AI-Powered Development
        </div>
        <h2 class="text-3xl sm:text-4xl font-bold leading-tight">
          Built for AI coding assistants
        </h2>
        <p class="text-lg text-muted-foreground leading-relaxed">
          AstroDeck follows the <a href="https://agents.md" target="_blank" rel="noopener" class="text-primary hover:underline font-medium">AGENTS.md standard</a> ‚Äì an open format for guiding AI coding agents, used by <strong>60,000+ open-source projects</strong> and stewarded by the Linux Foundation.
        </p>
        <p class="text-muted-foreground leading-relaxed">
          One configuration file provides your entire AI toolchain with project conventions, code patterns, and best practices. Plus, a dedicated <strong>Claude Code Agent</strong> offers proactive security, accessibility, and SEO warnings.
        </p>
        <div class="pt-2">
          <a
            href="https://github.com/holger1411/astrodeck#-ai-friendly-development"
            class="inline-flex items-center text-sm font-medium text-primary hover:underline"
          >
            Learn more in the documentation
            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column: Tools Grid -->
      <div class="space-y-6">
        <h3 class="text-xl font-semibold">Works with your favorite AI tools</h3>

        <div class="grid grid-cols-2 gap-px bg-border overflow-hidden rounded-lg border shadow-[0_25px_50px_-12px_rgba(0,0,0,0.15)]">
          {tools.map((tool) => (
            <a 
              href={tool.url} 
              target="_blank" 
              rel="noopener" 
              class="group relative overflow-hidden bg-card px-6 py-6 hover:bg-muted/50 transition-colors"
            >
              <div class="inline-flex p-1.5 border border-foreground rounded-lg mb-3 group-hover:border-primary group-hover:text-primary transition-colors">
                {tool.icon === "codex" && (
                  <span class="h-5 w-5 flex items-center justify-center font-bold text-sm">‚óØ</span>
                )}
                {tool.icon === "github" && (
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                  </svg>
                )}
                {tool.icon === "cursor" && (
                  <span class="h-5 w-5 flex items-center justify-center font-bold text-sm">‚åò</span>
                )}
                {tool.icon === "google" && (
                  <svg class="h-5 w-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                  </svg>
                )}
                {tool.icon === "windsurf" && (
                  <span class="h-5 w-5 flex items-center justify-center text-base">üèÑ</span>
                )}
                {tool.icon === "claude" && (
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                )}
              </div>
              <h4 class="font-bold mb-1 group-hover:text-primary transition-colors">{tool.name}</h4>
              <p class="text-sm text-muted-foreground">{tool.subtitle}</p>
            </a>
          ))}
        </div>

        <!-- More Tools -->
        <div class="space-y-3">
          <p class="text-sm text-muted-foreground">
            Plus: Zed, Aider, Factory, Amp, RooCode, Gemini CLI, and many more.
          </p>
          <a
            href="https://agents.md"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center text-sm font-medium text-primary hover:underline"
          >
            View all supported tools at agents.md
            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
