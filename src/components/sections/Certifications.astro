---
/**
 * Certifications Section
 * Displays Salesforce certifications as badges.
 */
interface Props {
  certifications?: { name: string; url?: string }[];
}

const { 
  certifications = [
    { name: "Platform Developer I", url: "https://trailhead.salesforce.com/credentials/platformdeveloper" },
    { name: "Salesforce Administrator", url: "https://trailhead.salesforce.com/credentials/administrator" },
  ]
} = Astro.props;
---

<section class="py-8 border-b">
  <div class="container max-w-5xl mx-auto px-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-center gap-4">
      <span class="text-sm text-muted-foreground font-medium sm:mr-2">Certifications</span>
      <div class="flex flex-wrap justify-center gap-3">
        {certifications.map((cert) => (
          cert.url ? (
            <a
              href={cert.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg border border-primary/30 bg-primary/5 px-4 py-2 text-sm font-medium hover:border-primary/50 hover:bg-primary/10 transition-colors"
            >
              <svg class="h-4 w-4 text-primary" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
              {cert.name}
            </a>
          ) : (
            <span
              class="inline-flex items-center gap-2 rounded-lg border border-primary/30 bg-primary/5 px-4 py-2 text-sm font-medium"
            >
              <svg class="h-4 w-4 text-primary" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
              {cert.name}
            </span>
          )
        ))}
      </div>
    </div>
  </div>
</section>
