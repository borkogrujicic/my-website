---
/**
 * Tech Stack / Expertise Section
 * Displays technologies and platforms in a clean grid.
 */
interface Props {
  title?: string;
}

const { title = "Expertise & technologies" } = Astro.props;

const technologies = [
  "Sales Cloud",
  "Service Cloud",
  "Apex",
  "LWC",
  "Visualforce",
  "Flows",
  "Copado",
  "Integrations",
];
---

<section class="py-12 border-y bg-muted/20">
  <div class="container max-w-5xl mx-auto px-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
      <span class="text-sm text-muted-foreground font-medium whitespace-nowrap">{title}</span>
      <div class="flex flex-wrap justify-center lg:justify-end gap-4">
        {technologies.map((tech) => (
          <span
            class="inline-flex items-center rounded-full border px-4 py-1.5 text-sm font-medium bg-background"
          >
            {tech}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
