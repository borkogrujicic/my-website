---
import { ViewTransitions } from "astro:transitions";
import "@/styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Astronomic</title>
    <ViewTransitions />
    <script is:inline>
      // Prevent flash of wrong theme
      (function() {
        const theme = localStorage.getItem("theme");
        if (theme === "dark" || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body class="min-h-screen antialiased">
    <div class="container relative min-h-screen flex-col items-center justify-center grid lg:max-w-none lg:grid-cols-2 lg:px-0">
      <div class="relative hidden h-full flex-col bg-muted p-10 text-white lg:flex dark:border-r">
        <div class="absolute inset-0 bg-zinc-900" />
        <div class="relative z-20 flex items-center text-lg font-medium">
          <a href="/" class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 32 32"
              fill="currentColor"
              class="h-6 w-6"
            >
              <!-- Triangle/A shape (rocket body) -->
              <path d="M16 2 L8 18 L12 18 L12 22 L20 22 L20 18 L24 18 Z" fill="currentColor" opacity="0.9"/>
              <!-- Rocket flames -->
              <path d="M12 22 L10 28 L14 25 L12 22 Z" fill="currentColor" opacity="0.6"/>
              <path d="M16 23 L15 30 L17 30 L16 23 Z" fill="currentColor" opacity="0.7"/>
              <path d="M20 22 L18 25 L22 28 L20 22 Z" fill="currentColor" opacity="0.6"/>
              <!-- Window -->
              <circle cx="16" cy="10" r="2" fill="currentColor" opacity="0.3"/>
            </svg>
            Astronomic
          </a>
        </div>
        <div class="relative z-20 mt-auto">
          <blockquote class="space-y-2">
            <p class="text-lg">
              "Astronomic gave us the perfect foundation to build our SaaS. Clean code, great design, and saved us months of development time."
            </p>
            <footer class="text-sm">Sofia Chen, CTO at TechStart</footer>
          </blockquote>
        </div>
      </div>
      <div class="lg:p-8">
        <div class="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-[350px]">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
