---
/**
 * Auth Layout
 *
 * Minimal layout for authentication pages (login, signup, password reset).
 * No header/footer, includes SEO with noindex for auth pages.
 */
import { ViewTransitions } from "astro:transitions";
import "@/styles/globals.css";
import SEO from "@/components/SEO.astro";

interface Props {
  title: string;
  description?: string;
}

const { 
  title,
  description = "Sign in to your AstroDeck account",
} = Astro.props;

const fullTitle = `${title} | AstroDeck`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{fullTitle}</title>
    <SEO 
      title={fullTitle}
      description={description}
      noindex={true}
    />
    <ViewTransitions />
    <script is:inline>
      // Prevent flash of wrong theme
      (function() {
        const theme = localStorage.getItem("theme");
        if (theme === "dark" || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body class="min-h-screen antialiased">
    <div class="container relative min-h-screen flex-col items-center justify-center grid lg:max-w-none lg:grid-cols-2 lg:px-0">
      <div class="relative hidden h-full flex-col bg-muted p-10 text-white lg:flex dark:border-r">
        <div class="absolute inset-0 bg-zinc-900" />
        <div class="relative z-20 flex items-center text-lg font-medium">
          <a href="/" class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 32 32"
              fill="currentColor"
              class="h-6 w-6"
            >
              <!-- Main card/deck -->
              <rect x="6" y="8" width="14" height="18" rx="2" fill="currentColor" opacity="0.9"/>
              <!-- Second card (layered) -->
              <rect x="9" y="6" width="14" height="18" rx="2" fill="currentColor" opacity="0.7"/>
              <!-- Third card (layered) -->
              <rect x="12" y="4" width="14" height="18" rx="2" fill="currentColor" opacity="0.5"/>
              <!-- Star on front card -->
              <path d="M19 12 L20 15 L23 15 L20.5 17 L21.5 20 L19 18 L16.5 20 L17.5 17 L15 15 L18 15 Z" fill="currentColor" opacity="0.3"/>
            </svg>
            AstroDeck
          </a>
        </div>
        <div class="relative z-20 mt-auto">
          <blockquote class="space-y-2">
            <p class="text-lg">
              "AstroDeck gave us the perfect foundation to build our SaaS. Clean code, great design, and saved us months of development time."
            </p>
            <footer class="text-sm">Sofia Chen, CTO at TechStart</footer>
          </blockquote>
        </div>
      </div>
      <div class="lg:p-8">
        <div class="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-[350px]">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
