---
/**
 * Full Width Layout
 *
 * Layout for showcase pages, portfolios, and galleries that need
 * full viewport width. Includes SEO meta tags.
 */
import { ViewTransitions } from "astro:transitions";
import "@/styles/globals.css";
import HeaderFullWidth from "@/components/HeaderFullWidth.astro";
import FooterFullWidth from "@/components/FooterFullWidth.astro";
import SEO from "@/components/SEO.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "AstroDeck - Modern Astro.js Component Library",
  image,
} = Astro.props;

const fullTitle = `${title} | AstroDeck`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{fullTitle}</title>
    <SEO 
      title={fullTitle}
      description={description}
      image={image}
    />
    <ViewTransitions />
    <script is:inline>
      // Prevent flash of wrong theme
      (function() {
        const theme = localStorage.getItem("theme");
        if (theme === "dark" || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col antialiased">
    <HeaderFullWidth />
    <main class="flex-1 w-full">
      <slot />
    </main>
    <FooterFullWidth />
  </body>
</html>
