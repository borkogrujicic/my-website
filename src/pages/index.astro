---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import LogoCloud from "@/components/sections/LogoCloud.astro";
import Features from "@/components/sections/Features.astro";
import Pricing from "@/components/sections/Pricing.astro";
import Testimonials from "@/components/sections/Testimonials.astro";
import CTA from "@/components/sections/CTA.astro";

const features = [
  {
    title: "Astro.js Powered",
    description: "Built with Astro for lightning-fast performance and optimal SEO out of the box.",
    icon: "zap",
  },
  {
    title: "shadcn/ui Components",
    description: "Beautiful, accessible components built with Radix UI and Tailwind CSS.",
    icon: "shield",
  },
  {
    title: "TypeScript Ready",
    description: "Full TypeScript support for type-safe development and better DX.",
    icon: "chart",
  },
  {
    title: "Dark Mode",
    description: "Built-in dark mode support with seamless theme switching.",
    icon: "users",
  },
  {
    title: "Responsive Design",
    description: "Mobile-first approach ensuring perfect display on all devices.",
    icon: "globe",
  },
  {
    title: "Ready to Deploy",
    description: "Optimized for Vercel, Netlify, and other modern hosting platforms.",
    icon: "lock",
  },
];

const pricingTiers = [
  {
    name: "Landing Page",
    price: "Free",
    description: "Everything you need for a stunning landing page.",
    features: [
      "Hero & CTA sections",
      "Logo cloud",
      "Feature showcase",
      "Responsive design",
      "Dark mode support",
    ],
    cta: { href: "https://github.com/astrodeck/astrodeck", label: "View on GitHub" },
  },
  {
    name: "Full SaaS",
    price: "Free",
    description: "Complete boilerplate for your SaaS product.",
    features: [
      "All landing page features",
      "Authentication layouts",
      "Pricing sections",
      "Privacy & legal pages",
      "TypeScript & shadcn/ui",
      "Production-ready",
    ],
    cta: { href: "https://github.com/astrodeck/astrodeck", label: "Get Started" },
    highlighted: true,
  },
  {
    name: "Open Source",
    price: "Free",
    description: "MIT licensed and open for contributions.",
    features: [
      "Full source code access",
      "Regular updates",
      "Community support",
      "No vendor lock-in",
      "Commercial use allowed",
      "Contribute on GitHub",
    ],
    cta: { href: "https://github.com/astronomic/astronomic", label: "Star on GitHub" },
  },
];

const testimonials = [
  {
    quote: "AstroDeck gave us a perfect starting point. We launched our SaaS in weeks instead of months.",
    author: "Sarah Chen",
    role: "Founder",
    company: "StartupLab",
  },
  {
    quote: "The clean architecture and TypeScript support made customization a breeze. Highly recommended!",
    author: "Marcus Johnson",
    role: "Lead Developer",
    company: "DevCo",
  },
  {
    quote: "Finally, a boilerplate that doesn't get in your way. The Astro + shadcn combo is perfect.",
    author: "Emily Rodriguez",
    role: "Full Stack Developer",
    company: "TechStart",
  },
];
---

<BaseLayout title="AstroDeck - Astro.js Component Library" description="Open-source Astro.js component library with shadcn/ui, Tailwind CSS, and TypeScript. Launch your SaaS faster.">
  <Hero
    badge="true"
    title="Launch your SaaS in days, not months."
    subtitle="AstroDeck is a modern, production-ready Astro.js component library with shadcn/ui components, dark mode, and everything you need to build a beautiful SaaS landing page."
    primaryCta={{ href: "https://github.com/astrodeck/astrodeck/archive/refs/heads/main.zip", label: "Download" }}
    secondaryCta={{ href: "https://github.com/astrodeck/astrodeck", label: "GitHub" }}
  />

  <LogoCloud />

  <Features
    title="Everything you need, right out of the box"
    subtitle="Built with modern technologies and best practices to help you ship faster."
    features={features}
  />

  <Testimonials
    title="Loved by developers"
    testimonials={testimonials}
  />

  <Pricing
    title="Free forever. Open source."
    subtitle="All features included. No hidden costs. Use it for any project, commercial or personal."
    tiers={pricingTiers}
  />

  <CTA
    title="Ready to build something amazing?"
    description="Get started with AstroDeck today and launch your next SaaS project in record time."
    cta={{ href: "https://github.com/astrodeck/astrodeck", label: "View on GitHub" }}
  />
</BaseLayout>
