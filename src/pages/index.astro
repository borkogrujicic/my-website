import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import Certifications from "@/components/sections/Certifications.astro";
import TechStack from "@/components/sections/TechStack.astro";
import Features from "@/components/sections/Features.astro";
import Interests from "@/components/sections/Interests.astro";
import CTA from "@/components/sections/CTA.astro";

const features = [
  {
    title: "Sales & Service Cloud",
    description: "Deep expertise in both Sales Cloud and Service Cloud—building flows, automations, and custom solutions that drive results.",
    icon: "chart",
  },
  {
    title: "Custom Solutions",
    description: "Built tailored solutions that solve real business problems. From complex integrations to bespoke Lightning components.",
    icon: "zap",
  },
  {
    title: "Business Growth",
    description: "Helped organizations scale by streamlining processes, improving data quality, and enabling teams to work smarter.",
    icon: "users",
  },
  {
    title: "Sales Team Enablement",
    description: "Empowered sales teams with better tools, automation, and visibility—leading to stronger pipeline and better outcomes.",
    icon: "shield",
  },
  {
    title: "Cross-Industry Experience",
    description: "Worked across various industries—from outsource to in-house—delivering solutions that fit each unique context.",
    icon: "globe",
  },
  {
    title: "7+ Years Experience",
    description: "From agency to in-house engineer. Proven track record of delivering value and growing with the platform.",
    icon: "lock",
  },
];
---

<BaseLayout 
  title="Salesforce Engineer & Developer" 
  description="7+ years building custom Salesforce solutions. Sales Cloud, Service Cloud, and helping businesses grow. In-house engineer with cross-industry experience."
>
  <Hero
    title="Salesforce Engineer building solutions that drive growth."
    subtitle="7+ years of experience across <mark>Sales Cloud</mark> and <mark>Service Cloud</mark>. I've built custom solutions, helped businesses scale, and empowered sales teams to deliver better results—from outsource to in-house, across various industries."
    primaryCta={{ href: "#contact", label: "Get in touch" }}
    secondaryCta={{ href: "/blog", label: "Read my blog" }}
  />

  <Certifications />

  <TechStack />

  <Features
    title="What I bring to the table"
    subtitle="Proven experience delivering value across the Salesforce ecosystem."
    features={features}
  />

  <Interests />

  <CTA
    id="contact"
    title="Let's work together"
    description="Looking for a Salesforce engineer who can build custom solutions and help your team succeed? I'd love to hear from you."
    cta={{ href: "mailto:hello@borkodev.com", label: "Say hello" }}
  />
</BaseLayout>
